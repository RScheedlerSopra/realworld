{
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "target": "es2020",
    "checkJs": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["src/**/*.js", "src/**/*.jsx", "cypress/**/*.js"],
  "exclude": ["node_modules", "dist", "build", "**/*.test.js", "**/*.test.jsx", "**/*.spec.js", "**/*.spec.jsx"]
}
